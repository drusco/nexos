{
  "name": "nexos",
  "version": "0.0.0-development",
  "description": "Simplifies proxy creation and trap handling using events",
  "main": "dist/index.js",
  "type": "module",
  "author": "Pedro Gallardo",
  "license": "MIT",
  "homepage": "https://github.com/drusco/nexos",
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc --project src",
    "clean": "rimraf dist coverage .eslintcache",
    "type-check": "tsc --project .",
    "lint": "eslint --cache --fix .",
    "lint-check": "eslint .",
    "format": "prettier --write --cache .",
    "format-check": "prettier --check .",
    "test": "jest",
    "test-coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.0",
    "@semantic-release/github": "^8.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0",
    "@side/jest-runtime": "^1.1.0",
    "@swc/core": "^1.3.76",
    "@swc/jest": "^0.2.28",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rimraf": "~5.0.0",
    "semantic-release": "^22.0.0",
    "typescript": "~5.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drusco/nexos.git"
  },
  "keywords": [
    "proxy",
    "events",
    "handler",
    "mock"
  ]
}
